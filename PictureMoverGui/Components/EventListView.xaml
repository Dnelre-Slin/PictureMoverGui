<UserControl x:Class="PictureMoverGui.Components.EventListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureMoverGui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer FontSize="15" Grid.Row="0" Margin="30" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListView 
                Name="EventList"
                ItemsSource="{Binding eventDataList}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{DynamicResource EventListHeaderName}" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding Name}"></TextBlock>
                                    </WrapPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{DynamicResource EventListHeaderStart}" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding StartDateTime.DateTimePrettyString}"></TextBlock>
                                    </WrapPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{DynamicResource EventListHeaderEnd}" Width="160">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Text="{Binding EndDateTime.DateTimePrettyString}"></TextBlock>
                                    </WrapPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{DynamicResource EventListHeaderAction}" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Button Margin="5 0" Width="30" Content="✎" Click="btnEventListEdit_Click"></Button>
                                        <Button Margin="5 0" Width="30" Content="🗑" Click="btnEventListDelete_Click"></Button>
                                    </DockPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="{DynamicResource EventListHeaderValid}" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Margin="10 0" Visibility="{Binding ShowErrorText}" Text="{DynamicResource CancelContent}" Foreground="Red"></TextBlock>
                                        <TextBlock Margin="10 0" Visibility="{Binding DontShowErrorText}" Text="{DynamicResource EventListCheckMark}" Foreground="Green"></TextBlock>
                                    </WrapPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
            <Button Margin="30 0" Padding="10" FontSize="15" MinWidth="80" Content="{DynamicResource EventListAddEvent}" Click="btnEventListCreate_Click"></Button>
        </WrapPanel>
    </Grid>
</UserControl>
