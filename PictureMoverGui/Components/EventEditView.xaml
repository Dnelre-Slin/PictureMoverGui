<UserControl x:Class="PictureMoverGui.Components.EventEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictureMoverGui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <GroupBox Margin="10" Header="{DynamicResource EventEditName}" FontSize="15">
                <WrapPanel Margin="10">
                    <TextBlock MinWidth="100" Margin="10 0" Text="{Binding eventDataEdit.Name}"></TextBlock>
                    <TextBox MinWidth="100" Margin="10 0" Text="{Binding eventDataEdit.Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </WrapPanel>
            </GroupBox>
            <GroupBox Margin="10" Header="{DynamicResource EventEditStart}" FontSize="15">
                <WrapPanel Margin="10">
                    <TextBlock MinWidth="100" Margin="10 0" Text="{Binding eventDataEdit.StartDateTime.DateTimePrettyString}"></TextBlock>
                    <DockPanel Margin="0 0 10 0">
                        <DatePicker Margin="10 0" SelectedDateFormat="Short" Text="{Binding eventDataEdit.StartDateTime.Date, Mode=TwoWay}"></DatePicker>
                        <ComboBox ItemsSource="{Binding eventDataEdit.StartDateTime.ListOfValidHours}" SelectedItem="{Binding eventDataEdit.StartDateTime.Hour}"></ComboBox>
                        <ComboBox ItemsSource="{Binding eventDataEdit.StartDateTime.ListOfValidMinutesAndSeconds}" SelectedItem="{Binding eventDataEdit.StartDateTime.Minute}"></ComboBox>
                        <ComboBox ItemsSource="{Binding eventDataEdit.StartDateTime.ListOfValidMinutesAndSeconds}" SelectedItem="{Binding eventDataEdit.StartDateTime.Second}"></ComboBox>
                    </DockPanel>
                    <Button Margin="10 0" Padding="2" Content="{DynamicResource EventEditSelectDateButtonText}" Click="btnOpenStartDateFile_Click"></Button>
                </WrapPanel>
            </GroupBox>
            <GroupBox Margin="10" Header="{DynamicResource EventEditEnd}" FontSize="15">
                <WrapPanel Margin="10">
                    <TextBlock MinWidth="100" Margin="10 0" Text="{Binding eventDataEdit.EndDateTime.DateTimePrettyString}"></TextBlock>
                    <DockPanel Margin="0 0 10 0">
                        <DatePicker Margin="10 0" SelectedDateFormat="Short" Text="{Binding eventDataEdit.EndDateTime.Date, Mode=TwoWay}"></DatePicker>
                        <ComboBox ItemsSource="{Binding eventDataEdit.EndDateTime.ListOfValidHours}" SelectedItem="{Binding eventDataEdit.EndDateTime.Hour}"></ComboBox>
                        <ComboBox ItemsSource="{Binding eventDataEdit.EndDateTime.ListOfValidMinutesAndSeconds}" SelectedItem="{Binding eventDataEdit.EndDateTime.Minute}"></ComboBox>
                        <ComboBox ItemsSource="{Binding eventDataEdit.EndDateTime.ListOfValidMinutesAndSeconds}" SelectedItem="{Binding eventDataEdit.EndDateTime.Second}"></ComboBox>
                    </DockPanel>
                    <Button Margin="10 0" Padding="2" Content="{DynamicResource EventEditSelectDateButtonText}" Click="btnOpenEndDateFile_Click"></Button>
                </WrapPanel>
            </GroupBox>
            <WrapPanel Margin="10">
                <TextBlock Foreground="Red" FontSize="15" Text="{DynamicResource EventEditShowErrorText}" Visibility="{Binding eventDataEdit.ShowErrorText}"></TextBlock>
            </WrapPanel>
        </StackPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button MinWidth="50" Margin="10 0 10 0" Padding="5 2" FontSize="15" Content="{DynamicResource EventEditBackButtonText}" Click="btnBack_Click"></Button>
        </WrapPanel>
    </Grid>
</UserControl>
